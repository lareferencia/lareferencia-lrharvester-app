<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:flowable="http://flowable.org/bpmn"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             targetNamespace="http://lareferencia.org/flowable"
             xsi:schemaLocation="http://www.omg.org/spec/BPMN/20100524/MODEL
                                 http://www.omg.org/spec/BPMN/2.0/20100501/BPMN20.xsd">

  <process id="xoaiIndexing" name="XOAI Indexing" isExecutable="true">
    <documentation>Index records to XOAI (OAI-PMH) Solr</documentation>
    
    <startEvent id="start" name="Start"/>
    
    <serviceTask id="xoaiIndexingTask" 
                 name="XOAI Indexing"
                 flowable:delegateExpression="${workerDelegateFactory.create('xoaiIndexerWorker')}"/>
    
    <endEvent id="end" name="End"/>
    
    <sequenceFlow id="flow1" sourceRef="start" targetRef="xoaiIndexingTask"/>
    <sequenceFlow id="flow2" sourceRef="xoaiIndexingTask" targetRef="end"/>
  </process>

</definitions>
