<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.lareferencia</groupId>

	<artifactId>lareferencia-lrharvester-app</artifactId>
	<name>LA Referencia LRHarvester APP</name>
	<description>LA Referencia LRHarvester APP</description>

	<version>4.2.0</version>

	<parent>
		<groupId>org.lareferencia</groupId>
		<artifactId>lareferencia-parent</artifactId>
		<version>4.2.0</version>
	</parent>

	<dependencies>

		<dependency>
			<groupId>org.lareferencia</groupId>
			<artifactId>lareferencia-core-lib</artifactId>
			<version>4.2.0</version>
		</dependency>


		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-security</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-test</artifactId>
			<scope>test</scope>
		</dependency>
		

	</dependencies>

	<profiles>

		<profile>
			<id>lite</id>
			<properties></properties>
			<dependencies>
			</dependencies>
		</profile>

        <!-- lareferencia profile -->
		<profile>
			<id>lareferencia</id>
			<properties></properties>
			<dependencies>
				<dependency>
					<groupId>org.lareferencia</groupId>
					<artifactId>lareferencia-entity-lib</artifactId>
					<version>4.2.0</version>
				</dependency>
			</dependencies>
			<build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-third-party-context</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <copy overwrite="true" file="config/lareferencia-context.xml" tofile="config/third-party-context.xml" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
		</profile>

        <!-- rcaap profile -->
		<profile>
			<id>rcaap</id>
			<properties></properties>
			<dependencies>
				<dependency>
					<groupId>org.lareferencia</groupId>
					<artifactId>lareferencia-entity-lib</artifactId>
					<version>4.2.0</version>
				</dependency>
				<dependency>
					<groupId>org.lareferencia</groupId>
					<artifactId>lareferencia-contrib-rcaap</artifactId>
					<version>4.2.0</version>
				</dependency>
			</dependencies>
			<build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-third-party-context</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <copy overwrite="true" file="config/rcaap-context.xml" tofile="config/third-party-context.xml" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
		</profile>

        <!-- ibict profile -->
		<profile>
			<id>ibict</id>
			<properties></properties>
			<dependencies>
				<dependency>
					<groupId>org.lareferencia</groupId>
					<artifactId>lareferencia-entity-lib</artifactId>
					<version>4.2.0</version>
				</dependency>
			</dependencies>
			<build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-third-party-context</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <copy overwrite="true" file="config/ibict-context.xml" tofile="config/third-party-context.xml" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
		</profile>

	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<executable>true</executable>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
                        <id>copy-app-jar</id>
						<phase>package</phase>
						<configuration>
							<target>
								<copy file="target/${project.artifactId}-${project.version}.jar" tofile="${harvester.appname}.jar" />
								<chmod file="${harvester.appname}.jar" perm="ugo+rx"/>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
                        <id>copy-third-party-context</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <copy overwrite="true" file="config/empty-context.xml" tofile="config/third-party-context.xml" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
